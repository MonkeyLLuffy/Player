<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <EditText 
        android:id="@+id/makelrc_lrc"
        android:layout_width="match_parent"
        android:background="#523D5A"
        android:textColor="#EFEEEF"
        android:layout_height="0px"
        android:layout_weight="1"  
        android:gravity="top"     
        android:inputType="textMultiLine"/>
	
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="#86788C"
			android:paddingTop="10dp"
            android:orientation="horizontal"
            android:padding="0dp" >

            <TextView
                android:id="@+id/makelrc_nowTime"
                android:layout_width="0px"
                android:layout_height="40dp"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:text="0:00" />

            <SeekBar
                android:id="@+id/makelrc_playSeekbar"
                style="?android:attr/seekBarStyle"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/makelrc_endTime"
                android:layout_width="0px"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="3:00" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:background="#ABA1AF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp" >

            <ImageButton
                android:id="@+id/makelrc__pause"
                android:layout_width="65dp"
                android:layout_height="65dp" />
		<Button 
		    android:id="@+id/makelrc_addtext"
		    android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/button_bg1"
                android:text="加入标签"
		    
		    />
		<Button 
		    android:id="@+id/makelrc_savefile"
		    android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_bg1"
                android:text="保存文件"
		    
		    />
        </LinearLayout>
    </LinearLayout>
    
    
    
</LinearLayout>
